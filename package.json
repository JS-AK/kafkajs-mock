{
  "name": "@js-ak/kafkajs-mock",
  "version": "1.0.0",
  "description": "kafkajs-mock",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/types/index.d.ts",
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "default": "./build/esm/index.js"
    },
    "./cjs": {
      "require": "./build/cjs/index.js"
    },
    "./esm": {
      "import": "./build/esm/index.js"
    }
  },
  "files": [
    "build/esm/lib",
    "build/esm/index.js",
    "build/esm/package.json",
    "build/cjs/lib",
    "build/cjs/index.js",
    "build/cjs/package.json",
    "build/types/lib",
    "build/types/index.d.ts",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run postbuild:cjs && npm run postbuild:esm",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "lint": "eslint . --ext .ts",
    "postbuild:esm": "node scripts/write-esm-package.js",
    "postbuild:cjs": "node scripts/write-cjs-package.js",
    "test:unit": "vitest run --config vitest.unit.config.js",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JS-AK/kafkajs-mock.git"
  },
  "keywords": [
    "kafkajs-mock"
  ],
  "author": "JS-AK",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JS-AK/kafkajs-mock/issues"
  },
  "homepage": "https://github.com/JS-AK/kafkajs-mock#readme",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.6",
    "@semantic-release/npm": "12.0.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@stylistic/eslint-plugin-ts": "4.4.1",
    "@types/node": "24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-sort-exports": "0.9.1",
    "globals": "16.4.0",
    "semantic-release": "24.2.9",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "kafkajs": "2.2.4"
  }
}
