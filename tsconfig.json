{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext"
		],
		"module": "esnext",
		"rootDir": "./src",
		"moduleResolution": "node",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"useUnknownInCatchVariables": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true
	},
	"exclude": [
		"build",
		"**/*.spec.ts",
		"vitest.config.ts"
	],
}
